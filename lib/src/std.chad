pub close(TcpSocket& socket)
  include
    if (_socket->_refCountPtr == 0) {
      goto cleanup;
    }
    closeTcp((TcpHandle)_socket->_handle);
    free((void*)_socket->_refCountPtr);
    _socket->_refCountPtr = 0;
  
