pub terminateStr(char[] input) char[]
  char[] zeroTerminated = arr(input.len + 1)
  for i 0:input.len
    zeroTerminated[i] = input[i]
  zeroTerminated[input.len] = '\0'
  include
    _zeroTerminated._len -= 1;

  return zeroTerminated

