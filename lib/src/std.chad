pub add(List[T]& list, T val)
  if list.len == list.arr.len
    T[&] newAlloc = arr(list.len * 2)
    for i 0:list.arr.len
      newAlloc[i] = list.arr[i]
    list.arr = newAlloc

  list[list.len] = val
  list.len += 1

